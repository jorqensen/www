---
import "@fontsource-variable/inter";
import { ViewTransitions } from "astro:transitions";
import Footer from "~/components/Footer.astro";
import GradientBackgroundWrapper from "~/components/GradientBackgroundWrapper.astro";
import Navigation from "~/components/Navigation.astro";

interface Props {
    title: string;
    published: Date;
}

const { title, published } = Astro.props;
const faviconUrl = new URL("/favicon.ico", Astro.url);
---

<html
    lang="en"
    transition:animate="none"
>
    <head>
        <meta charset="utf-8" />
        <link
            rel="icon"
            type="image/ico"
            href={faviconUrl}
        />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />

        <link
            rel="manifest"
            href="/manifest.json"
        />

        <!-- Open Graph -->
        <meta
            name="og:title"
            content={title}
        />
        <meta
            name="og:image"
            content={faviconUrl}
        />
        <meta
            name="og:type"
            content="article"
        />
        <meta
            name="og:article:published_time"
            content={published.toISOString()}
        />
        <meta
            name="og:article:author"
            content={Astro.site}
        />
        <meta
            name="twitter:card"
            content="summary"
        />
        <meta
            name="twitter:site"
            content="@jorqensen"
        />
        <meta
            name="og:url"
            content={Astro.url}
        />

        <title>{title} | Mathias JÃ¸rgensen</title>
        <ViewTransitions />
    </head>
    <body class="bg-neutral-950 font-inter text-neutral-300 antialiased">
        <GradientBackgroundWrapper>
            <Navigation />
            <main
                class="container mx-auto max-w-5xl p-8"
                transition:animate="fade"
            >
                <slot />
            </main>
            <Footer />
        </GradientBackgroundWrapper>
    </body>
</html>
