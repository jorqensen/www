---
import "@fontsource-variable/inter";
import { ViewTransitions } from "astro:transitions";
import Navigation from "~/components/Navigation.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
const faviconUrl = new URL("/favicon.ico", Astro.url);
---

<html
    lang="en"
    class="min-h-screen bg-neutral-950 bg-paper font-inter text-neutral-300 antialiased"
    transition:animate="fade"
>
    <head>
        <meta charset="utf-8" />
        <link
            rel="icon"
            type="image/ico"
            href={faviconUrl}
        />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />

        <link
            rel="manifest"
            href="/manifest.json"
        />

        <!-- Open Graph -->
        <meta
            name="og:title"
            content="Mathias Jørgensen"
        />
        <meta
            name="og:description"
            content="Software developer & Customer Success Coordinator"
        />
        <meta
            name="og:image"
            content={faviconUrl}
        />
        <meta
            name="og:type"
            content="profile"
        />
        <meta
            name="og:profile:first_name"
            content="Mathias"
        />
        <meta
            name="og:profile:last_name"
            content="Jørgensen"
        />
        <meta
            name="og:profile:username"
            content="jorqensen"
        />
        <meta
            name="og:profile:gender"
            content="male"
        />
        <meta
            name="og:url"
            content={Astro.url}
        />

        <title>{title} | Mathias Jørgensen</title>
        <ViewTransitions />
    </head>
    <body>
        <Navigation />
        <main class="container mx-auto max-w-5xl p-8">
            <slot />
        </main>
        <footer
            class="container mx-auto max-w-5xl justify-between p-8 text-sm text-neutral-600"
        >
            <p>Built with {Astro.generator}</p>
        </footer>
    </body>
</html>
