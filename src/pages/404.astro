---
import ApplicationLayout from "~/layouts/ApplicationLayout.astro";
---

<ApplicationLayout title="Not Found">
    <main class="grid gap-y-8">
        <h1 class="text-balance text-4xl font-semibold tracking-tight">
            404 - Not Found
        </h1>
        <p>
            You seem lost. Return <a
                href="/"
                class="underline transition-colors hover:text-teal-500"
                >home?</a
            >
        </p>
    </main>
</ApplicationLayout>
